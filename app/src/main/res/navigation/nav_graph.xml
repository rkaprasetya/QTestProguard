<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/repoListFragment">

    <fragment
        android:id="@+id/repoListFragment"
        android:name="com.raka.myapplication.view.ui.repolist.RepoListFragment"
        android:label="fragment_repo_list"
        tools:layout="@layout/fragment_repo_list">
        <action
            android:id="@+id/action_repoListFragment_to_repoDetailFragment"
            app:destination="@id/repoDetailFragment" />
        <action
            android:id="@+id/action_repoListFragment_to_formActivity"
            app:destination="@id/formActivity" />
        <action
            android:id="@+id/action_repoListFragment_to_formFragment"
            app:destination="@id/formFragment" />
    </fragment>
    <fragment
        android:id="@+id/repoDetailFragment"
        android:name="com.raka.myapplication.view.ui.repodetail.RepoDetailFragment"
        android:label="fragment_repo_detail"
        tools:layout="@layout/fragment_repo_detail">
        <argument
            android:name="url"
            android:defaultValue="https://wwww.github.com"
            app:argType="string" />
    </fragment>
    <activity
        android:id="@+id/formActivity"
        android:name="com.raka.myapplication.view.ui.form.FormActivity"
        android:label="activity_form"
        tools:layout="@layout/activity_form" />
    <fragment
        android:id="@+id/formFragment"
        android:name="com.raka.myapplication.view.ui.form.FormFragment"
        android:label="fragment_form"
        tools:layout="@layout/fragment_form" >
        <argument
            android:name="message"
            android:defaultValue="hello"
            app:argType="string" />
        <argument
            android:name="day"
            android:defaultValue="hzzzello"
            app:argType="string" />
    </fragment>
</navigation>